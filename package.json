{
  "name": "vite-plugin-runtime",
  "version": "1.4.0",
  "description": "Vite plugin that enables configuring runtime environment variables when building",
  "author": {
    "name": "Flexbase Technologies",
    "email": "hello@flex.one",
    "url": "https://flex.one"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flexbase-eng/vite-plugin-runtime/issues"
  },
  "homepage": "https://github.com/flexbase-eng/vite-plugin-runtime#readme",
  "keywords": [
    "flexbase",
    "flex",
    "vite",
    "vite-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flexbase-eng/vite-plugin-runtime.git"
  },
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "private": false,
  "scripts": {
    "changeset": "changeset && changeset version",
    "lint": "eslint src/** --max-warnings=0",
    "lint:fix": "yarn lint --fix",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,json}'",
    "test": "vitest run --coverage",
    "test:ci": "vitest run --coverage --config vitest.ci.config.ts",
    "prepare": "is-ci || husky install",
    "packr": "packr"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": "eslint --cache --fix --max-warnings=0",
    "src/**/*.{ts,tsx,css,json}": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "prettier": "^3.3.2"
  },
  "peerDependencies": {
    "vite": "*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@flexbase/packr": "latest",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "7.15.0",
    "@typescript-eslint/parser": "7.15.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "9.6.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-check-file": "2.8.0",
    "eslint-plugin-filenames-simple": "0.9.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-require-extensions": "^0.1.3",
    "husky": "9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "15.2.7",
    "moq.ts": "^10.0.8",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0",
    "vite": "5.3.6",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "2.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 150
  },
  "packr": {
    "output": "output",
    "properties": [
      "name",
      "version",
      "description",
      "main",
      "module",
      "types",
      "exports",
      "homepage",
      "repository",
      "bugs",
      "author",
      "license",
      "dependencies",
      "type",
      "bin",
      "keywords"
    ],
    "include": [
      "dist",
      "README.md",
      "LICENSE",
      "yarn.lock"
    ]
  }
}
